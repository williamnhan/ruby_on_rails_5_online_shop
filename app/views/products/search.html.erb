<% provide(:title, params[:search] ) %>
<div class="row">
  <%= render "left_menu" %>

  <div class="col-md-9 border_left">
    <h3 class="text-left"><%= pluralize(@numFound, "product") %> found</h3>
    <% @products.each do |product| %>
      <%= render "product_row", product: product, order_item: @order_item %>
    <% end %>
  </div>
</div>