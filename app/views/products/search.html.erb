<% provide(:title, params[:search] ) %>
<div class="row">
  <%= render "left_menu" %>

  <div class="col-md-9 border_left">
    <h3 class="text-left"><%= pluralize(@response['response']['numFound'], "product") %> found</h3>
    <% @response['response']['docs'].each do |product| %>
      <%= render "product_search", product: product.to_h, order_item: @order_item %>
    <% end %>
  </div>
</div>